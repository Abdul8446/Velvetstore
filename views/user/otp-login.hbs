<!--================login Area =================-->
<section class="login_area p_100">
    <div class="container">
        <div class="login_inner">
            <div class="row">
                <div class="col-lg-4">
                    <div class="login_title">

                         {{!-- {{#if blockStatus}}
                        <div class="alert alert-danger" role="alert">
                            User Blocked
                        </div>
                        {{/if}}
                        {{#if loginErr}}
                        <div class="alert alert-danger" role="alert">
                            Invalid User !!
                        </div>
                        {{else}} --}}
                        <h2>log in with OTP</h2>
                        <p>Enter your Phone number</p>
                        {{#if mobileNotFoundErr}}
                        <div class="alert alert-danger">Mobile number doesn't exist!!</label>
                        {{/if}}
                        {{#if userBlocked}}
                        <label class="alert alert-danger">User Blocked!!</label>
                        {{/if}}
                        {{!-- {{/if}} --}}
                    </div>
                    <form class="login_form row" action="/send-code" method="post" name="sendcodeForm" onsubmit="return validateSendcode()">
                        <div class="col-lg-12 form-group">
                            <input class="form-control" type="tel" name="phone" placeholder="Phone number">
                            <label class="text-danger" id="phonevalidate"></label>
                        </div>
                        <div class="col-lg-12 form-group">
                            <button type="submit" class="btn update_btn form-control">Send OTP</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End login Area =================-->
<script>
    function validateSendcode(){
        let phone = document.forms["sendcodeForm"]["phone"].value;
        if (!phone.match(/^[0-9]{10}$/)) {
            document.getElementById('phonevalidate').innerHTML = 'Enter a valid 10 digit phone number'
            return false;
        }
    }
</script>